<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity">

    <TextView
        android:id="@+id/myPhotoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="My Photo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/myPhoto"
        android:layout_width="294dp"
        android:layout_height="288dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPhotoText" />

    <TextView
        android:id="@+id/noPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO PHOTO"
        app:layout_constraintBottom_toBottomOf="@+id/myPhoto"
        app:layout_constraintEnd_toEndOf="@+id/myPhoto"
        app:layout_constraintStart_toStartOf="@+id/myPhoto"
        app:layout_constraintTop_toTopOf="@+id/myPhoto" />

    <Button
        android:id="@+id/makePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="TAKE PHOTO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>