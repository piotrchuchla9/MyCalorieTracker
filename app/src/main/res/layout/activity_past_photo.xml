<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity">

    <TextView
        android:id="@+id/myPhotoTextPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="My Photo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/myPhotoPast"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPhotoTextPast" />

    <TextView
        android:id="@+id/noPhotoPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO PHOTO"
        app:layout_constraintBottom_toBottomOf="@+id/myPhotoPast"
        app:layout_constraintEnd_toEndOf="@+id/myPhotoPast"
        app:layout_constraintStart_toStartOf="@+id/myPhotoPast"
        app:layout_constraintTop_toTopOf="@+id/myPhotoPast" />


</androidx.constraintlayout.widget.ConstraintLayout>